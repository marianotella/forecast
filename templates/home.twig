{% extends 'template.twig' %}

{% block content %}

    {% if favourites %}
    <section class="hero results {{ weather.city.id ? 'is-primary' : 'is-danger' }}  ">
        <div class="hero-body">
            <div class="hero">
            <h2 class="has-text-centered">Favourite Cities</h2>
                <div class="grid">
                {% for favourite in favourites %}
                {% if favourite.city.id %}
                <div class="item">
                        <div class="card">
                            <header class="card-header">
                                <p class="card-header-title">
                                    {{ favourite.city.name }}
                                </p>
                                <a href="#" class="card-header-icon" aria-label="more options">
                                </a>
                            </header>
                            <div class="card-content">
                                <div class="content">
                                    <p>Actual temperature {{ favourite.temperature.getValue()|round(1, 'floor') }} ºC</p>
                                    <ul>
                                        <li>Min: {{ favourite.temperature.min.getValue()|round(1, 'floor') }} ºC - Max: {{ favourite.temperature.max.getValue()|round(1, 'floor') }} ºC</li>
                                        <li>Humidity: {{ favourite.humidity }}</li>
                                        <li>Pressure: {{ favourite.pressure }}</li>
                                    </ul>
                                    <time datetime="2016-1-1">Last update {{ weather.lastUpdate.getTimestamp()|date("F jS \\a\\t g:ia") }}</time>
                                </div>
                            </div>
                            <footer class="card-footer">
                                <a href="/city/{{ favourite.city.name }}" class="card-footer-item">Show map</a>
                                <a href="/city/remove/{{ favourite.city.name }}" class="card-footer-item">Delete</a>
                            </footer>
                        </div>
                </div>
                {% endif %}
                {% endfor %}
                </div>
            </div>
        </div>
    </section>
    {% endif %}
{% endblock %}
